<?xml version='1.0' encoding='utf-8'?>
<widget id="org.krish.remote_pi" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Remote PI</name>
    <description>
        Remote PI applicatoin to connect to PI node remotely.
    </description>
    <author email="krishinsh@gmail.com" href="http://www.google.com">
        Krišjānis Gross
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<preference name="SplashScreenDelay" value="500" />
</widget>
